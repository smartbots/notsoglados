{
  "compilerOptions": {
    "allowJs": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
    },
    "outDir": "build",
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
